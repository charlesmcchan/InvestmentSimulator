<br/>
<%= form_tag("/home/login", :method => "post") do %>
	<table>
		<tr>
			<td><%= label_tag(:email, "Email:") %></td>
			<td><%= text_field_tag(:email) %></td>
		</tr>
		<tr>
			<td><%= label_tag(:password, "Password:") %></td>
			<td><%= password_field_tag(:password) %></td>
		</tr>
		<tr>
			<td><%= submit_tag("Login") %></td>
			<td><b><%= @status %></b></td>
		</tr>
	</table>
<% end %>
