<br/>
<%= form_tag('login', :method => 'post') do %>
	<table>
		<tr><td><%= label_tag(:username, "Username:") %></td><td><%= text_field_tag(:username) %></td></tr>
		<tr><td><%= label_tag(:password, "Password:") %></td><td><%= password_field_tag(:password) %></td></tr>
		<tr><td><%= submit_tag("Login") %></td><td><b><%= @status %></b></td></tr>
	</table>
<% end %>
