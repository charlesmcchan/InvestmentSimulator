<!DOCTYPE html>
<html>
	<head>
		<title>Fund Simulation</title>
		<%= stylesheet_link_tag :all %>
		<%= csrf_meta_tag %>
	</head>
	<body>
		<div id="menu">
			<h1><%= controller.controller_name %>/<%= controller.action_name %></h1>
			<% if session[:user] != nil then %>
				<h3><%= 'Hello, ' + session[:user] %><br/><%= link_to 'Logout', '/home/logout' %></h3>
			<% else %>
				<h3><%= link_to 'Login', '/home/login' %></h3>
			<% end %>
			<hr/>

			<h3><%= link_to 'Home', '/' %></h3>
			<h3>
		</div>
		<div id="content">
			<%= yield %>
		</div>
	</body>
</html>
